{
  "name": "lsv/tvmazeapi",
  "description": "PHP Wrapper for TV Maze API",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Aarhof",
      "email": "martin.aarhof@gmail.com"
    }
  ],
  "require": {
    "php": "^5.6|^7.0",
    "guzzlehttp/guzzle": "^6.2",
    "symfony/options-resolver": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Lsv\\TvmazeApi\\": "src"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^5.3",
    "phpmd/phpmd": "^2.2",
    "sebastian/phpcpd": "^2.0",
    "phploc/phploc": "^2.1",
    "phing/phing": "^2.11",
    "squizlabs/php_codesniffer": "^2.3",
    "friendsofphp/php-cs-fixer": "^1.10",
    "phpdocumentor/reflection": "^3.0",
    "phpdocumentor/phpdocumentor": "^2.9"
  },
  "autoload-dev": {
    "psr-4": {
      "Lsv\\TvmazeApiTest\\": "tests"
    }
  },
  "config": {
    "bin-dir": "bin"
  }

}
